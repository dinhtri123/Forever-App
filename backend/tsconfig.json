{
  "compilerOptions": {
    "module": "NodeNext", // For ESM
    "moduleResolution": "NodeNext",
    "target": "ES2020", // ES2020 or later is recommended
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
